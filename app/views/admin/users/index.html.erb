<div class="row">
  <div class="col-md-10">
    <div class="card">
      <div class="card-header">
      <div class="row">
        <div class="col-md-6">
        <h4 class="card-title"> </h4>
        </div>
        <div class="col-md-6 text-right">
          <%= link_to 'Create New', new_admin_user_path, class: "btn btn-primary btn-sm" %>
        </div>
      <%= render 'shared/alert' %>
      </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
          <% if @users.exists? %>
            <thead class=" text-primary">
              <tr><th>
                Name
              </th>
              <th>
                Email Address
              </th>
              <th>
                Date Created
              </th>
              <th>
                Action
              </th>
            </tr></thead>
            <tbody>
            <% @users.each do |user| %> 
              <tr>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= time_ago_in_words(user.created_at) %> ago
                </td>
                <td class="text-left">
                  <%= link_to edit_admin_user_path(user) do %>
                  <i class="far fa-lg fa-edit text-primay"></i>
                  <% end %>
                  <%= link_to admin_user_path(user), method: :destroy, data: {confirm: 'Are you sure?'} do %>
                    <i class="far fa-trash-alt fa-lg text-warning"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <% else %>
              <p>There is no users</p>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>