<div class="col-md-8 ">
    <div class="card card-user">
      <div class="card-header">
        <h5 class="card-title"><b><%= action_name.capitalize %> User</b></h5>
      </div>
      <%= form_for [:admin, @user] do |f| %>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger">
            <button type="button" aria-hidden="true" class="close">Ã—</button>
            <span><b> Danger - </b> <%= msg %></span>
        </div>
        <% end %>
      <% end %>
      <div class="card-body">
        <form>
          <div class="row">
            <div class="col-md-12 col-sm-12 pr-1">
              <div class="form-group">
                <%= f.label :name %>
                <%=  f.text_field :name, class: "form-control", placeholder: "User Name"%>
              </div>
              <div class="form-group">
                <%= f.label :email %>
                <%=  f.text_field :email, class: "form-control", placeholder: "Email Address"%>
              </div>
                <%= link_to "Cancel", admin_users_path, class: "btn btn-secondary btn-wd" %>
                <%=  f.submit "Submit", class: "btn btn-primary btn-wd"%>
            </div>
          </div>
        </form>
      </div>
        <% end %>
    </div>
  </div>