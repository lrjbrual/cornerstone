
<div class="container marginTop60">
  <div class="row coloured-cards">
    <% @sermons.each do |sermon| %>
      <div class="col-md-4 col-sm-12">
          <div class="card-big-shadow">
              <div class="card" data-radius="none">
                  <div class="content">
                    <div class="row">
                      <div class="col-md-6">
                        <h6 class="category">
                          <%= sermon.category.name %>
                        </h6>
                      </div>
                      <div class="col-md-6 text-right">
                        <h5 class="category">
                          <%= time_ago_in_words(sermon.created_at) %> Ago
                        </h5>
                      </div>
                    </div>
                      <h4 class="title">
                        <%= link_to sermon.title, sermon_path(sermon) %>
                      </h4>
                      <p class="description">
                        <%= sanitize sermon.body.first(150) %>....
                      </p>
                  </div>
              </div> <!-- end card -->
          </div>
      </div>
    <% end %>
  </div>
</div>